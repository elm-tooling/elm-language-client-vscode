{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~*": ["./*"]
    },
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "strict": true,
    "lib": ["es6"],
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["server/src", "client/src"],
  "exclude": ["node_modules", ".vscode-test"],
  "references": [{ "path": "./client" }, { "path": "./server" }]
}
